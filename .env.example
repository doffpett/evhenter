# evHenter Environment Variables
# Copy this file to .env.local for local development

# ============================================
# DATABASE (Vercel Postgres)
# ============================================
# Get these from Vercel Dashboard > Storage > Postgres > .env.local tab
POSTGRES_URL="postgres://..."
POSTGRES_PRISMA_URL="postgres://...?pgbouncer=true"
POSTGRES_URL_NON_POOLING="postgres://..."
POSTGRES_USER="..."
POSTGRES_HOST="..."
POSTGRES_PASSWORD="..."
POSTGRES_DATABASE="..."

# ============================================
# AUTHENTICATION
# ============================================
# Generate a random 256-bit secret: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-here-change-this"
JWT_EXPIRES_IN="7d"

# Cookie configuration
COOKIE_DOMAIN=".evhenter.ai"
COOKIE_SECURE="true"  # Set to false for localhost

# ============================================
# OPENAI API
# ============================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."
OPENAI_ORG_ID=""  # Optional

# OpenAI Model Configuration
OPENAI_PARSING_MODEL="gpt-4-turbo-preview"
OPENAI_IMAGE_MODEL="dall-e-3"

# ============================================
# VERCEL BLOB STORAGE
# ============================================
# Get from Vercel Dashboard > Storage > Blob
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_..."

# ============================================
# EMAIL (Optional - Phase 4)
# ============================================
# SendGrid or Resend for transactional emails
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASS="SG..."
EMAIL_FROM="noreply@evhenter.ai"

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features without code changes
ENABLE_AI_PARSING="true"
ENABLE_AI_IMAGES="true"
ENABLE_COMMUNITY_APPROVAL="false"  # Enable in Phase 4
ENABLE_EMAIL_NOTIFICATIONS="false"  # Enable in Phase 4

# ============================================
# RATE LIMITING
# ============================================
# Submissions per hour per user
RATE_LIMIT_SUBMISSIONS="5"
RATE_LIMIT_APPROVALS="50"

# ============================================
# MONITORING & ANALYTICS (Optional - Phase 5)
# ============================================
# Sentry for error tracking
SENTRY_DSN="https://...@sentry.io/..."
SENTRY_ENVIRONMENT="development"

# Plausible Analytics
PLAUSIBLE_DOMAIN="evhenter.ai"
PLAUSIBLE_API_KEY=""  # Optional for server-side tracking

# ============================================
# APPLICATION
# ============================================
NODE_ENV="development"
APP_URL="http://localhost:3000"

# Pagination
EVENTS_PER_PAGE="24"

# Image Generation
MAX_IMAGE_RETRIES="3"
IMAGE_GENERATION_TIMEOUT="30000"  # milliseconds

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Skip auth checks (dev only)
DEV_SKIP_AUTH="false"

# Verbose logging
DEBUG="false"

# Mock OpenAI (for testing without API calls)
MOCK_OPENAI="false"
